        .cookie__btn-wrapper
            .cookie__close-btn
                button(type='button')
                    | X
            .cookie__link
                a(class='cookie__link' href='#')
                    | chiudi
    .compact-header
        include _components/_header-logo
        include _components/_gamburger
    .mobile-menu  
        ul.mobile-menu__list
            -var items = ['prodotti', 'filiera', 'news', 'valori', 'contatti', 'language']
            each item in items
                li.mobile-menu__item
                    a(class='mobile-menu__link' href='#')= item=='language'? '' : item
                    -if (item == 'prodotti')
                        .mobile-menu__arrow
                        ul.mobile-menu__inner-list
                            -var arr = ['direzionali', 'attesa', 'high_line', 'operative', 'lavoro']
                            each i in arr
                                li.mobile-menu__inner-item
                                    a(class='mobile-menu__inner-link' href='#')= i
                    -if (item == 'valori')
                        .mobile-menu__arrow
                        ul.mobile-menu__inner-list
                            -var arr = ['ricerca', 'collaborazione', 'accuratezza', 'ergonomia', 'flessibilita', 'organizzazione']
                            each i in arr
                                li.mobile-menu__inner-item
                                    a(class='mobile-menu__inner-link' href='#')= i
                    -if (item == 'language')
                        ul.mobile-menu__langs
                            -var langs = ['en', 'it']
                            each lang in langs
                                li.mobile-menu__lang
                                    a(class='mobile-menu__lang-link' href='#')= lang
        ul.mobile-menu__socials
            -var socials = ['twitter', 'facebook', 'linkedin', 'youtube', 'pinterest']
            each social in socials
                li(class='socials__item')
                    a(class='socials__link socials__link--' + social href='#')= social
    .header-top
        .header-top__leftside
            .logo__wrapper
                include _components/_header-logo
                include _components/_language
            .header-top__video-wrapper
                video(class='header-top__video' poster='commons/images/video-poster.jpg' preload='metadata')
                    source(src='')
                .play-btn
        .header-top__rightside
    .header-bottom
        -var items = ['direzionali', 'attesa', 'high_line', 'operative', 'lavoro']
        each item in items
            li(class='header-bottom__menu')
                a(class="header-bottom__link" href='#')= item
            
    
        
                
        
                    
                
